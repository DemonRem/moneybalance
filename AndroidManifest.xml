<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ivl.android.moneybalance"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/coins"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >

        <activity
            android:name=".CalculationListActivity"
            android:label="@string/app_name" >            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CalculationEditorActivity" />
        <activity android:name=".ExpenseListActivity" />
        <activity android:name=".ExpenseEditorActivity" />
        <activity android:name=".SummaryActivity" />
        
    </application>

</manifest>